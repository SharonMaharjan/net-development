@model MotoGPPractice.Models.ViewModels.SelectRaceViewModel
@{
    ViewData["Title"] = "Races";
}
<form asp-controller="Info" asp-action="SelectRace" method="get">
    <select asp-for="raceID" asp-items="Model.Races">
        <option value="0">--Select a race --</option>
    </select>
    <input  type="submit" value="Filter"/>
</form>
<br />
@if (Model.SelectedRace != null)
{
    <img src="@Url.Content("~/Images/Races/" + @Model.SelectedRace.RaceID + ".jpg")"  />
    <h3>@Model.SelectedRace.Name - @Model.SelectedRace.Country</h3>
    <p>Length: @Model.SelectedRace.Length m</p>
    <p>Date: @Html.DisplayFor(model => model.SelectedRace.Date)</p>
    <p>Description: @Model.SelectedRace.Description</p>
    
}