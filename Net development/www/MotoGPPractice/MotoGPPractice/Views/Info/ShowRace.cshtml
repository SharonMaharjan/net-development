@model IEnumerable<MotoGPPractice.Models.Race>
@{
    string raceName = Model.FirstOrDefault()?.Name ?? string.Empty;
    ViewData["Title"] = $"Race - {raceName}";
}
@foreach(var item in Model){
    <h1>@(Html.DisplayFor(modelItem => item.Date))- @item.Country</h1>
    <img src="@Url.Content("~/Images/Races/" + item.RaceID + ".jpg")" alt="@item.Country" />
    <p>@item.Description</p>
}