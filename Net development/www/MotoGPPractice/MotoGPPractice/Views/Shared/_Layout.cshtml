@{
    var banners = new List<String>
            { "bannerRaces.jpg", "bannerRiders.jpg", "bannerTeams.jpg", "bannerTickets.jpg" };
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]-MotoGP</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <a asp-controller="Home" asp-action="Index">
        <img src="~/images/banners/@banners[(int)ViewData["BannerNr"]]" alt="Banner" />
    </a>
    <h1>@ViewData["Title"]</h1>
        @RenderBody()
    <a asp-controller="Home" asp-action="Index">Back</a>|
    
</body>
</html>
