@model MvcMovie.Models.Movie
@{
    ViewData["Title"] = "Create";
    var ratings = (IEnumerable < SelectListItem >) ViewData["Ratings"];

}

<form asp-action= "Create">
    <label asp-for="Title">@Html.DisplayNameFor(model => model.Title)</label>
    <input asp-for="Title" />
    <br />

    <label asp-for="RatingID">@Html.DisplayNameFor(model => model.Rating)</label>
    <select asp-for="RatingID" asp-items="ratings"></select>
    <br />
     <label asp-for="ReleaseDate">@Html.DisplayNameFor(model => model.ReleaseDate)</label>
    <input asp-for="ReleaseDate" />
    <br />
     <label asp-for="Genre">@Html.DisplayNameFor(model => model.Genre)</label>
    <input asp-for="Genre" />
    <br />
    <input type="submit" value="Create" />
</form>